<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context=".CreateTask">

    <Button
        android:id="@+id/botaoCriar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:background="#1A7015"
        android:onClick="botaoCriarTask"
        android:text="Criar"
        app:layout_constraintBottom_toBottomOf="@+id/botaoCreate"
        app:layout_constraintStart_toStartOf="@+id/botaoCreate" />

    <Button
        android:id="@+id/botaoCancelar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="#A72323"
        android:onClick="botaoCancelarTask"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/botaoCreate"
        app:layout_constraintEnd_toEndOf="@+id/botaoCreate"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toEndOf="@+id/botaoCriar" />

    <FrameLayout
        android:id="@+id/botaoCreate"
        android:layout_width="342dp"
        android:layout_height="338dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#E6E6E6"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/descriptionText"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="#E6E6E6"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine" />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>